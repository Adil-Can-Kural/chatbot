        // Ä°ÅŸleniyor mesajÄ±nÄ± kaldÄ±r
        selectedRoom.messages.pop();
        
        // Resim mesajÄ±nÄ± ekle
        selectedRoom.messages.push(imageMessage);
        saveChatHistory();
        scrollToBottom();
    } catch (error) {
        console.error('Resim oluÅŸturma hatasÄ±:', error);
        
        // Hata mesajÄ± gÃ¶nder
        const errorMessage = {
            id: Date.now(),
            content: "Resim oluÅŸturulurken bir hata oluÅŸtu. LÃ¼tfen daha sonra tekrar deneyin.",
            created_at: new Date().toISOString(),
            user_id: null,
            room_id: selectedRoom.id,
