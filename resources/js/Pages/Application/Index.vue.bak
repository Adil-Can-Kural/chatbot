    "Neden yazÄ±yorsun?",
    "Ne istiyorsun?",
    "TanÄ±ÅŸÄ±yor muyuz?",
    "Seni tanÄ±yor muyum?",
    "NasÄ±l yardÄ±mcÄ± olabilirim?",
    "Bir ÅŸey mi lazÄ±mdÄ±?"
  ];
  
  // KullanÄ±cÄ± kendini tanÄ±ttÄ± mÄ± kontrol et
  const userIntroduced = userProfile.value.name && prompt.toLowerCase().includes(userProfile.value.name.toLowerCase());
  
  // KullanÄ±cÄ±nÄ±n mesajÄ±na gÃ¶re yanÄ±t seÃ§
  if (prompt.toLowerCase().includes('merhaba') || 
      prompt.toLowerCase().includes('selam') || 
      prompt.toLowerCase().includes('hey') ||
      prompt.toLowerCase().includes('sa')) {
    
    // EÄŸer kullanÄ±cÄ± kendini tanÄ±ttÄ±ysa veya daha Ã¶nce adÄ± biliniyorsa
    if (userIntroduced || userProfile.value.name) {
      return `${greetings[Math.floor(Math.random() * greetings.length)]} ${userProfile.value.name}.`;
    } else {
      // KullanÄ±cÄ± kendini tanÄ±tmadÄ±ysa, adÄ±nÄ± sor
      return `${greetings[Math.floor(Math.random() * greetings.length)]} ${questions[Math.floor(Math.random() * 2)]}`; // Ä°lk iki soru (isim sorularÄ±)
    }
  } 
  else if (prompt.toLowerCase().includes('?')) {
    return shortResponses[Math.floor(Math.random() * shortResponses.length)];
  }
  else if (prompt.length < 15) {
    return shortResponses[Math.floor(Math.random() * shortResponses.length)];
  }
  else {
    // KullanÄ±cÄ± uzun bir mesaj yazdÄ±ysa ama kendini tanÄ±tmadÄ±ysa
    if (!userProfile.value.name) {
      return questions[Math.floor(Math.random() * questions.length)];
    } else {
      // KullanÄ±cÄ±nÄ±n adÄ± biliniyorsa, kÄ±sa yanÄ±tlar ver
      return shortResponses[Math.floor(Math.random() * shortResponses.length)];
    }
  }
};

