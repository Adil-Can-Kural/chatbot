        // Ä°ÅŸleniyor mesajÄ±nÄ± kaldÄ±r
        selectedRoom.messages.pop();
        
        // Hata mesajÄ±nÄ± ekle
        selectedRoom.messages.push(errorMessage);
        saveChatHistory();
        scrollToBottom();
    } finally {
        isGeneratingImage.value = false;
    }
};

