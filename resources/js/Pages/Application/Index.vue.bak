// Mesaj gÃ¶nderme
const sendMessage = async () => {
    if (!newMessage.value.trim()) return;

    // KullanÄ±cÄ± mesajÄ±nÄ± ekle
    const userMessage = {
        id: Date.now(),
        content: newMessage.value,
        created_at: new Date().toISOString(),
        user_id: user.id,
        room_id: selectedRoom.id,
        type: 'text'
    };
    selectedRoom.messages.push(userMessage);

    // Mesaj kutusunu temizle
    const sentMessage = newMessage.value;
    newMessage.value = '';

    // Sohbeti aÅŸaÄŸÄ± kaydÄ±r
    scrollToBottom();

    // MesajÄ± kaydet
    if (selectedRoom.name === 'Elif') {
        saveChatHistory();
        
        // Elif'e mesaj gÃ¶nderildi, Groq API'den yanÄ±t al
        const response = await askGroq(sentMessage, 'elif');
        
        // EÄŸer yanÄ±t null deÄŸilse (resim oluÅŸturma isteÄŸi deÄŸilse)
        if (response !== null) {
            // Bot yanÄ±tÄ±nÄ± ekle
            const botMessage = {
                id: Date.now(),
                content: response,
                created_at: new Date().toISOString(),
                user_id: null,
                room_id: selectedRoom.id,
                type: 'text'
            };
            selectedRoom.messages.push(botMessage);
            saveChatHistory();
            scrollToBottom();
        }
    } else if (selectedRoom.name === 'Serdar') {
        saveSerdarChatHistory();
        
        // Serdar'a mesaj gÃ¶nderildi, Groq API'den yanÄ±t al
        const response = await askGroq(sentMessage, 'serdar');
        
        // Bot yanÄ±tÄ±nÄ± ekle
        if (response !== null) {
            const botMessage = {
                id: Date.now(),
                content: response,
                created_at: new Date().toISOString(),
                user_id: null,
                room_id: selectedRoom.id,
                type: 'text'
            };
            selectedRoom.messages.push(botMessage);
            saveSerdarChatHistory();
            scrollToBottom();
        }
    } else if (selectedRoom.name === 'NazlÄ±') {
        saveNazliChatHistory();
        
        // NazlÄ±'ya mesaj gÃ¶nderildi, Groq API'den yanÄ±t al
        const response = await askGroq(sentMessage, 'nazli');
        
        // Bot yanÄ±tÄ±nÄ± ekle
        if (response !== null) {
            const botMessage = {
                id: Date.now(),
                content: response,
                created_at: new Date().toISOString(),
                user_id: null,
                room_id: selectedRoom.id,
                type: 'text'
            };
            selectedRoom.messages.push(botMessage);
            saveNazliChatHistory();
            scrollToBottom();
        }
    } else {
        // DiÄŸer sohbetler iÃ§in normal mesaj gÃ¶nderme iÅŸlemi
        try {
            const response = await axios.post(`/rooms/${selectedRoom.id}/messages`, {
                message: sentMessage
            });
            
            // MesajÄ± gÃ¼ncelle (sunucudan gelen ID ile)
            const index = selectedRoom.messages.findIndex(msg => msg.id === userMessage.id);
            if (index !== -1) {
                selectedRoom.messages[index] = response.data;
            }
        } catch (error) {
            console.error('Mesaj gÃ¶nderme hatasÄ±:', error);
            
            // Hata durumunda mesajÄ± kaldÄ±r
            const index = selectedRoom.messages.findIndex(msg => msg.id === userMessage.id);
            if (index !== -1) {
                selectedRoom.messages.splice(index, 1);
            }
            
            // Hata mesajÄ± gÃ¶ster
            alert('Mesaj gÃ¶nderilemedi. LÃ¼tfen daha sonra tekrar deneyin.');
        }
    }
};

